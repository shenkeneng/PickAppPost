<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title_red_noright" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/shape_circle_rectangle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_head_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/icon_head_portrait" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_head_portrait"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/frxs_balck"
                    android:textSize="@dimen/twenty_six" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle_rectangle"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:drawableLeft="@mipmap/icon_version_selector"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="版本选择"
                    android:textColor="@color/frxs_black_dark"
                    android:textSize="@dimen/twenty" />

                <RadioGroup
                    android:id="@+id/rg_version_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_version_classic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/selector_button_switch"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="经典版"
                        android:textColor="@color/frxs_black_dark"
                        android:textSize="@dimen/twenty" />

                    <RadioButton
                        android:id="@+id/rb_version_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/selector_button_switch"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="精简版"
                        android:textColor="@color/frxs_black_dark"
                        android:textSize="@dimen/twenty" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle_rectangle"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:drawableLeft="@mipmap/icon_font"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="字体大小"
                    android:textColor="@color/frxs_black_dark"
                    android:textSize="@dimen/twenty" />

                <RadioGroup
                    android:id="@+id/rg_font_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_font_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/selector_button_switch"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="放    大"
                        android:textColor="@color/frxs_black_dark"
                        android:textSize="@dimen/twenty" />

                    <RadioButton
                        android:id="@+id/rb_font_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/selector_button_switch"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="标    准"
                        android:textColor="@color/frxs_black_dark"
                        android:textSize="@dimen/twenty" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_update_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle_rectangle"
                android:drawableLeft="@mipmap/icon_update_psw"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="修改用户密码"
                android:textSize="@dimen/twenty" />

            <TextView
                android:id="@+id/tv_myversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle_rectangle"
                android:drawableLeft="@mipmap/icon_version"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="版本号:V1.0"
                android:textSize="@dimen/twenty" />

            <TextView
                android:id="@+id/tv_bluetooth_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle_rectangle"
                android:drawableLeft="@mipmap/icon_bluetooth_setting"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="设置蓝牙"
                android:textSize="@dimen/twenty" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle_rectangle"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:drawableLeft="@mipmap/icon_force_print"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="强制打印"
                    android:textColor="@color/frxs_black_dark"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/print_checked_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/button_version_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/frxs_black_dark"
                    android:textSize="@dimen/twenty" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_red_border_rectangle"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="退出用户"
                android:textColor="@color/frxs_red"
                android:textSize="@dimen/twenty" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>