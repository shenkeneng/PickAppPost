<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_pick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_green_light_circle_rectangle"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_picking"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_serial_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_bottom_seriel"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1.1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            android:text="货位："
                            android:textColor="@color/frxs_black_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_goods_number"
                            style="@style/theme_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100001"
                            android:textColor="@color/frxs_black_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            android:text="包装数："
                            android:textColor="@color/frxs_black_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_goods_packing_qty"
                            style="@style/theme_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1010"
                            android:textColor="@color/frxs_black_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/common_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            android:text="条码："
                            android:textColor="@color/frxs_black_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_barcode"
                            style="@style/theme_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1101010101101"
                            android:layout_marginRight="@dimen/common_padding"
                            android:textColor="@color/frxs_black_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            android:text="价格："
                            android:textColor="@color/frxs_black_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            style="@style/theme_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112.12"
                            android:textColor="@color/frxs_black_dark" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin"
                    android:singleLine="true"
                    android:text="备注："
                    android:textColor="@color/frxs_red"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_green_light_circle_rectangle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_count_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="11包"
                android:textColor="@color/frxs_black_dark"
                android:textSize="@dimen/twenty_three"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pick_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/frxs_green"
                android:gravity="center"
                android:text="未拣"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_three"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/classical_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总数量："
                android:textColor="@color/frxs_black_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_goods_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/frxs_red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_line_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="(共0行)"
                android:textColor="@color/frxs_black_light"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订货金额："
                android:textColor="@color/frxs_black_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_fund_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/frxs_red"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>