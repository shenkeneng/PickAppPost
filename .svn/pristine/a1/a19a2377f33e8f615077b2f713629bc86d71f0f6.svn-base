<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_title_red_noright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_normal"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_font_btn"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="标准字体"
                android:textColor="@drawable/selector_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_big"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_font_btn"
                android:button="@null"
                android:gravity="center"
                android:text="放大字体"
                android:textColor="@drawable/selector_text_color"
                android:textSize="26sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/red_round_corner_rectangle"
            android:gravity="center"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_six" />

    </LinearLayout>

</LinearLayout>
