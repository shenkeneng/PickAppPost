<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/device_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_six" />

        <TextView
            android:id="@+id/connect_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state_unconnected"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_six" />

        <TextView
            android:id="@+id/print_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_print_btn"
            android:textColor="@color/selector_print_text"
            android:text="打印"
            android:textSize="@dimen/twenty_six"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>